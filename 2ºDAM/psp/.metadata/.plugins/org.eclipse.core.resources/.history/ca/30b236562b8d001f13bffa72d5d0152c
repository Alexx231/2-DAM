package actividad;

import java.util.List;

public class Consumidora implements Runnable {
    private List<Double> radios;

    public Consumidora(List<Double> radios) {
        this.radios = radios;
    }

    @Override
    public void run() {
        while (true) {
            if (!radios.isEmpty()) {
                double radio = radios.remove(0);
                Circunferencia circunferencia = new Circunferencia(radio);
                System.out.println("Consumidora ha creado una circunferencia con radio: " + radio + " y Ã¡rea: " + circunferencia.getArea());
            } else {
                try {
                    Thread.sleep(500);
                } catch (InterruptedException e) {
                    e.printStackTrace();
                }
            }
        }
    }
}